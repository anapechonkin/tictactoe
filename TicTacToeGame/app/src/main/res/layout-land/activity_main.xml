<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:orientation="horizontal"
        tools:context=".MainActivity">

    <!-- Player information and game status in a vertical layout -->
    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

        <!-- Player 1 Info -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

            <TextView
                    android:id="@+id/text_view_player1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/player_1"
                    android:textSize="20sp"/>

            <TextView
                    android:id="@+id/score_player1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_0"
                    android:textSize="20sp"
                    android:freezesText="true"/>
        </LinearLayout>

        <!-- Game Status -->
        <TextView
                android:id="@+id/text_view_turn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:gravity="center"
                android:text="@string/game_status"/>

        <!-- Player 2 Info -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

            <TextView
                    android:id="@+id/text_view_player2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/player_2"
                    android:textSize="20sp"/>

            <TextView
                    android:id="@+id/score_player2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_0"
                    android:textSize="20sp"
                    android:freezesText="true"/>
        </LinearLayout>
        <!-- New Game Button -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <Button
                    android:id="@+id/newGame_button"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="@string/new_game"
                    android:textSize="18sp"
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="14dp"/>
            />
        </LinearLayout>
    </LinearLayout>

    <!-- Game board and new game button in a vertical layout -->
    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

        <!-- Game Board -->
        <!-- Define your game board here similar to the portrait layout,
             adjusting the layout_weight and dimensions as needed -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                    android:id="@+id/buttonPosition_00"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:textSize="60sp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:freezesText="true"/>

            <Button
                    android:id="@+id/buttonPosition_01"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:textSize="60sp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:freezesText="true"/>

            <Button
                    android:id="@+id/buttonPosition_02"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:textSize="60sp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:freezesText="true"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                    android:id="@+id/buttonPosition_10"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:textSize="60sp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:freezesText="true"/>

            <Button
                    android:id="@+id/buttonPosition_11"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:textSize="60sp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:freezesText="true"/>

            <Button
                    android:id="@+id/buttonPosition_12"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:textSize="60sp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:freezesText="true"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                    android:id="@+id/buttonPosition_20"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:textSize="60sp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:freezesText="true"/>

            <Button
                    android:id="@+id/buttonPosition_21"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:textSize="60sp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:freezesText="true"/>

            <Button
                    android:id="@+id/buttonPosition_22"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:textSize="60sp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:freezesText="true"/>

        </LinearLayout>

        
    </LinearLayout>
</LinearLayout>
